_default:
    @just --list

clean:
    rm work/*

# Test individual components: mux
test component="component":
    @just _test-{{component}}

_test-mux:
    ghdl -a --std=08 --workdir=work src/mux.vhd
    ghdl -e --std=08 --workdir=work mux_tb
    ghdl -r --std=08 --workdir=work mux_tb --vcd=work/mux.vcd


